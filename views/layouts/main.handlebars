  <script>
    function check(name) {
      if (confirm(`你確定要刪除${name}嗎`)) {
        document.getElementById('delete-btn').value = 'true'
        console.log(document.getElementById('delete-btn').value)
      } else {
        document.getElementById('delete-btn').value = 'false'
        event.preventDefault()
      }
    }
