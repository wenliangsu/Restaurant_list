<body {{#unless isAuthenticated}}class="banner-not-login" {{/unless}}>
  <header>
    <!-- navigation -->
    <nav class="navbar navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
            width="30" height="30" class="d-inline-block align-top"
            alt="{{#if isAuthenticated}}{{user.name}}-{{/if}}restaurant-list" />
          {{#if isAuthenticated}}{{user.name}}'s {{/if}}Restaurant List
        </a>
        {{#if isAuthenticated}}
        <div class="">
          <a class="navbar-brand" href="/restaurants/new"><i class="fa-solid fa-circle-plus"></i>
            Add restaurant</a>
          <a class="navbar-brand" href="/users/logout"><i class="fa-solid fa-arrow-right-from-bracket"></i>
            Logout</a>
        </div>
        {{/if}}
      </div>
    </nav>

    {{#if isAuthenticated}}
    <div class="banner-login"></div>
    {{/if}}
  </header>


  {{! partial template }}
  {{{body}}}

  {{! Javascript }}
  <script src="/javascripts/popper.js"></script>
  <script src="/javascripts/bootstrap.js"></script>

