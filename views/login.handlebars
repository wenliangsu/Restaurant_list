<div class="row mt-5 mb-5  justify-content-center">
  <div class="row" style="width: 1000px;">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mt-2 mb-5">Login</h1>

        <form action="/users/login" method="POST">
          <div class="mb-3">
            <label for="email" class="mb-2 fs-4 text-center">Email</label>
            <input type="email" id="email" name="email" class="form-control form-control-lg"
              placeholder="Please enter E-mail">
          </div>
          <div class="mb-3">
            <label for="password" class="mb-2 fs-4">Password</label>
            <input type="password" id="password" name="password" class="form-control form-control-lg"
              placeholder="Please enter Password">
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
          <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>
</div>